/* pages/shopping_cart/shopping_cart.wxss */
page {
  background-color: rgb(245, 245, 245);
}
/* 购物车为空 */
.cart_null {
  text-align: center;
  align-items: center;
  padding-top: 40px;
}
.add_cart {
  background-color: #2775b6;
  color: white;
  border-radius: 30px;
  width: 30%;
  font-size: 15px;
  margin-top: 15px;
}

/* 购物车卡片 */
.card {
  margin: 15px;
  padding: 15px 0;
  background: white;
  border-radius: 8px;
  box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
}
.card_contain {
  display: flex;
  align-items: center;
  padding: 6px 10px;
}
.card_contain image {
  width: 85px;
  height: 85px;
  border-radius: 5px;
  margin-left: 2px;
  margin-right: 15px;
}
.shop_name {
  font-size: small;
  padding: 10px 10px;
  border-bottom: rgba(0, 0, 0, 0.1) 1px solid;
}
.scale_information {
  flex: 1 1 auto;
  flex-basis: 0;
}
.scale_title {
  margin-bottom: 5px;
  font-size: small;
}
.scale {
  color: grey;
  font-size: x-small;
  margin-bottom: 15px;
}
.scale_price_contain {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.scale_price {
  color: red;
}

/* 购物车卡片头部 */
.card_head {
  display: flex; 
  align-items: center;
  padding: 2px 10px;
  padding-bottom: 10px;
  justify-content: space-between;
}
.card_head_leftbox {
  display: flex; 
  align-items: center;
}
.shop_check {
  margin-right: 7px; 
  vertical-align: middle;
}
.shop_arrow {
  margin-left: 3px; 
  vertical-align: middle;
}

/* 购物车列表 */
.cart_list {
  height: 100%; 
  margin-bottom: 120px;
}


