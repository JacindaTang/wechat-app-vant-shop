/* pages/classify/classify.wxss */
/* 分类主布局 */
.main_layout {
  display: flex;
  margin-top: 10px;
}

/* 左侧菜单 */
.left_Menulist {
  width: auto;
  background: #f7f8fa;
}

/* 右侧内容 */
.right_MainLayout {
  width: 100%;
}

/* 右侧内容宫格 */
.van-grid-item__icon {
  font-size: 50px !important;
  height: 50px !important;
}
.van-grid-item__text {
  font-size: 14px !important;
}

/* 推荐栏卡片组件 购买按钮 */
.van-card__bottom {
  display: flex;
  align-items: center;
}
.van-card__bottom view:last-child {
  margin-left: auto;
  margin-right: 0px;
}

