/**index.wxss**/

/* 轮播图图片宽度 */
.slide-image{
  width: 100%;
  height: 100%;
}

/* 展示图片的间距 */
.showImageChild {
  margin: 20px 0;
}

/* 今日推荐的标题样式 */
.title {
  background: #428675;
  color: white;
  width: 20%;
  text-align: center;
  border-radius: 0 55rpx 55rpx 0;
  padding: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 25rpx;
}

/* 商品卡片 */
.van-card__bottom {
  display:flex;
}
.van-card__bottom view:last-child {
  margin-left: auto;
  margin-right: 0px;
}
.card_title {
  font-size: large;
  font-weight: bold;
}
.card_desc {
  color:grey;
}
.card_tag {
  margin-top: 10rpx;
  margin-bottom: 15rpx;
}
.card_tag .card_tag_child {
  margin-right: 10rpx;
}
.purchase_btn {
  background-color: #2c9678;
  /* background-color: #2775b6; */
  color: white;
  padding: 5rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  border-radius: 30rpx;
}

/* tab栏 */
.van-tab--active {
  font-weight: bold !important;
  /* font-size: 17px !important; */
}

/* 分隔符 */
.divider {
  background-color: #ccc;
  opacity: 0.3; 
  height: 10px;
  margin-top: 10px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}